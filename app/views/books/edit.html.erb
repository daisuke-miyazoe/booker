<%= render 'layouts/error_messages', model: @book %>

<div class="container">
    <div class="edit">
        <h1>Editing Book</h1>
        <%= form_for(@book) do |f| %>
            
            <div class="field">
            <h4>Title</h4>
            <%= f.text_field :title, class: "book_new", class: "book_edit" %>
            </div>

            <div class="field">
            <h4>Opinion<h4>
            <%= f.text_area :body, class: "book_new", class: "book_edit" %><br>
            </div>

            <div class="field">
            <%= f.submit 'Update Book', class: "btn btn-info" %><br>
            </div>
            <%= link_to "Show", book_path(@book.id) %> |
            <%= link_to "Back", books_path %>
            
        <% end %>
    </div>
</div>