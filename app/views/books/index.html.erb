<% if flash[:notice] %>
    <div class="flash">
        <%= flash[:notice] %>
    </div>
<% end %>
<%= render 'layouts/error_messages', model: @book %>

<div class="body">
    <div class="container">
        <div class="row">
            <div class="col-xs-3">
                <h2>User info</h2>
                <table class="table">
                    <%= form_for(@user) do |f| %>
                        <div class="profile_">
                            <div class="user-edit-image">
                            <%= attachment_image_tag @user, :profile_image, size: "100x100", fallback: "img.profile_image.jpg" %>
                            </div>
                        </div>
                    <% end %>
                    <tbody>
                        <tr>
                            <th>name</th>
                            <th><%= @user.name %></th>
                        </tr>
                    </tbody>
                    <tbody>
                        <tr>
                            <th>introduction</th>
                            <th><%= @user.introduction %></th>
                        </tr>
                    </tbody>
                </table>
                
                <%= link_to edit_user_path(current_user.id) do %>
                    <i class="col-xs-12 btn btn-default glyphicon glyphicon-wrench"></i>
                <% end %>

                <%= form_for(@book) do |f| %>
                    <h2>New book</h2>
                    <h4>Title</h4>
                    <%= f.text_field :title %>
                    <h4>Opinion<h4>
                    <%= f.text_field :body %><br>
                    <%= f.submit 'Create Book' %>
                <% end %>
            </div>

            <div class="col-xs-9">
                <h2>Books</h2>
                <table class="table">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Title</th>
                            <th>Opinion</h2>
                        </tr>
                    </thead>
                    <% @books.each do |book| %>
                        <tbody>
                            <tr>
                                <th>
                                    <%= link_to user_path(book.user) do %>
                                        <%= attachment_image_tag book.user, :profile_image, size: "30x30", fallback: "img.profile_image.jpg"%>
                                    <% end %>
                                </th>
                                <th>
                                    <%= link_to book_path(book.id) do %>
                                        <%= book.title %>
                                    <% end %>
                                </th>
                                <th><%= book.body %></th>
                            </tr>
                        </tbody>
                    <% end %>
            </div>
        </div>
    </div>