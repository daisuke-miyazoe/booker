<%= render 'layouts/error_messages', model: @book %>
<%= notice %>

<div class="body">
    <div class="container">
        <div class="row">
            <div class="col-xs-3">
                <h2>User info</h2>
                <%= form_for(@user) do |f| %>
                    <div class="form-group has-icon">
                        <div class="user-edit-image">
                        <%= attachment_image_tag @user, :profile_image, size: "100x100", fallback: "img.profile_image.jpg"%>
                        </div>
                    </div>
                <% end %>
                <table class="table">
                    <tbody>
                        <tr>
                            <th>name</th>
                            <th><%= @user.name %></th>
                        </tr>
                    </tbody>
                    <tbody>
                        <tr>
                            <th>introduction</th>
                            <th><%= @user.introduction %></th>
                        </tr>
                    </tbody>
                </table>
                <%= link_to edit_user_path(current_user.id) do %>
                    <i class="col-xs-12 btn btn-default glyphicon glyphicon-wrench"></i>
                <% end %>

                <%= form_for(@book) do |f| %>
                    <h2>New book</h2>
                    <h4>Title</h4>
                    <%= f.text_field :title %>
                    <h4>Opinion<h4>
                    <%= f.text_field :body %><br>
                    <%= f.submit 'Create Book' %>
                <% end %>
            </div>

            <div class="col-xs-9">
                <h2>Users</h2>
                <table class="table">
                    <thead>
                        <tr>
                            <th>image</th>
                            <th>name</th>
                            <th></th>
                        </tr>
                    </thead>
                    <% @users.each do |f| %>
                    <tbody>
                        <tr>
                            <th>
                                <%= attachment_image_tag f, :profile_image, size: "30x30", fallback: "img.profile_image.jpg"%>
                            </th>
                            <th><%= f.name %></th>
                            <th><%= link_to "Show", user_path(f) %></th>
                        </tr>
                    </tbody>
                    <% end %>
                </table>
            </div>
        </div>
    </div>
</div>