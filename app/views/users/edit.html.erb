<%= render 'layouts/error_messages', model: @user %>

<h1>User info</h1>
<%= form_for(@user) do |f| %>
    <label>Name</label><%= f.text_field :name %>
    
        <div class="form-group has-icon">
            <label>Image</label>
            <div class="user-edit-image">
            <%= attachment_image_tag @user, :profile_image, size: "100x100", fallback: "img.profile_image.jpg"%>
            </div>
            <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
        </div>
    
    <label>Introduction</label><%= f.text_area :introduction %>
    <%= f.submit "Update User" %>
<% end %>